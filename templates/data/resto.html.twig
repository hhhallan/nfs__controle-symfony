{% extends 'base.html.twig' %}

{% block title %}Coucou Célestin !{% endblock %}

{% block body %}
    <div class="card text-center">
        <div class="card-header">
            <h5>{{ resto.nom }}</h5>
        </div>
        <div class="card-body">
            <img src="{{ resto.image}}" class="card-img" alt="{{ resto.nom }}">
            <h5 class="card-title">Notre restaurant spécialisé dans la nourriture {{ random(['japonaise', 'française', 'italienne', 'espagnole', 'turque', 'grecque', 'chinoise', 'américaine', 'thaïlandaise', 'indienne']) }}</h5>
            <p class="card-text">Notre Restaurant est basé au {{ resto.adresse }}</p>
            <a href="{{ path('data_resto', {nom: resto.nom})}}" class="btn btn-dark">Réservez !</a>
        </div>
        <div class="card-footer text-muted">
            Posté il y {{ random(1, 365)}} jours <br>
            Boss : {{ resto.proprietaire.prenom }} {{ resto.proprietaire.nom }} ({{ resto.proprietaire.dateNaissance | date('d-m-Y') }})
        </div>
    </div>
{% endblock %}
